{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "title": "Process Map Output Schema",
    "description": "Schema for the JSON output of the process map generator",
    "required": [
        "process_name",
        "process_description",
        "process_map_bpmn_xml",
        "risk_taxonomy",
        "controls"
    ],
    "properties": {
        "process_name": {
            "type": "string",
            "description": "Name of the business process"
        },
        "process_description": {
            "type": "string",
            "description": "High-level summary of the process"
        },
        "process_map_bpmn_xml": {
            "type": "string",
            "description": "BPMN 2.0 XML representation of the process"
        },
        "risk_taxonomy": {
            "type": "array",
            "description": "List of identified risks",
            "items": {
                "type": "object",
                "required": [
                    "name",
                    "category",
                    "description"
                ],
                "properties": {
                    "name": {
                        "type": "string",
                        "description": "Risk name"
                    },
                    "category": {
                        "type": "string",
                        "description": "Risk category (e.g., Operational Risk, Financial Risk)"
                    },
                    "description": {
                        "type": "string",
                        "description": "Detailed risk description"
                    }
                }
            }
        },
        "controls": {
            "type": "array",
            "description": "List of identified controls",
            "items": {
                "type": "object",
                "required": [
                    "name",
                    "type",
                    "description"
                ],
                "properties": {
                    "name": {
                        "type": "string",
                        "description": "Control name"
                    },
                    "type": {
                        "type": "string",
                        "description": "Control type (e.g., Preventive, Detective, Corrective)"
                    },
                    "description": {
                        "type": "string",
                        "description": "Detailed control description"
                    }
                }
            }
        }
    }
}